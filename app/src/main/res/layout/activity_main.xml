<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:customTxt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.munchado.piyush.android.customview.MainActivity">

    <com.munchado.piyush.android.customview.DateView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:delimiter=","
        custom:drawableLeftPadding="@mipmap/ic_launcher"
        custom:fancyText="true"
        custom:newTextColor="@color/colorAccent" />

    <com.munchado.piyush.android.customview.MyEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12345"
        custom:chardrawableLeftPadding="@android:drawable/ic_dialog_info"
        customTxt:charMaximumLimit="15"
        customTxt:charTextColor="@color/colorAccent" />
</LinearLayout>
